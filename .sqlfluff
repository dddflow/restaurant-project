[sqlfluff]
dialect = oracle
exclude_rules = L009  # отключить правило про табуляцию

[sqlfluff:rules]
capitalisation_policy = upper

# Capitalisation of keywords
[sqlfluff:rules:L010]
capitalisation_policy = upper

# Use of trailing comma in SELECT clause
[sqlfluff:rules:L014] 
extended_capitalisation_policy = upper

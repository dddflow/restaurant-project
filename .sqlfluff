[sqlfluff]
dialect = oracle
exclude_rules = L009  # отключить правило про табуляцию

[sqlfluff:rules]
capitalisation_policy = upper  # все ключевые слова — заглавные

[sqlfluff:rules:L010]  # Capitalisation of keywords
capitalisation_policy = upper

[sqlfluff:rules:L014]  # Use of trailing comma in SELECT clause
extended_capitalisation_policy = upper


[sqlfluff]
dialect = oracle

[sqlfluff:rules]
exclude_rules = L009

# Правило: ключевые слова должны быть ЗАГЛАВНЫМИ
[sqlfluff:rules:capitalisation.keywords]
capitalisation_policy = lower

# Правило: идентификаторы (имена таблиц, колонок и т.п.)
[sqlfluff:rules:capitalisation.identifiers]
capitalisation_policy = upper